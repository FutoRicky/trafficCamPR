{{partial "navbar"}}

<div class="row">
  {{#each cams as |cam|}}
    <div class="col m3">
      <div class="card medium">
        <div class="card-image">
          {{load-img src=cam.imageSource}}
        </div>
        <div class="card-content">
          <span class="card-title grey-text text-darken-4">{{cam.name}}</span>
          <p>{{cam.location}}</p>
        </div>
      </div>
    </div>
  {{/each}}
</div>

{{outlet}}

